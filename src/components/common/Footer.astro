---
import { InstagramIcon, LinkedInIcon, LogoSVG } from "@/lib/assets";
import { getLangFromUrl, useTranslations } from "@/lib/utils";
import { ArrowUp } from "lucide-react";
import { Link } from "../ui/link";

const year = new Date().getFullYear();
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const areas = [
  {
    text: t("footer.area1"),
    href: "https://www.angolatoday.ao/",
  },
  {
    text: t("footer.area2"),
    href: "https://boldlabs.ao",
  },
  {
    text: t("footer.area3"),
    href: "https://boldlabs.ao/",
  },
  {
    text: t("footer.area4"),
    href: "https://www.labuta.ao",
  },
];
---

<footer class="bg-foreground py-12">
  <div class="wrapper text-white space-y-12 text-sm">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-6">
        <LogoSVG />
        <p>
          {t("footer.description")}
        </p>
        <ul class="flex items-center gap-4">
          <li>
            <Link
              variant="ghost"
              href="https://www.instagram.com/boldmediaao"
              target="_blank"
              size="icon"
              className="p-0 size-auto"
            >
              <InstagramIcon />
            </Link>
          </li>
          <li>
            <Link
              variant="ghost"
              href="https://www.linkedin.com/company/bold-media-holding-group"
              target="_blank"
              size="icon"
              className="p-0 size-auto"
            >
              <LinkedInIcon />
            </Link>
          </li>
        </ul>
      </div>
      <div class="space-y-4">
        <p class="font-bold text-lg">{t("footer.areas")}</p>
        <ul class="space-y-2">
          {
            areas.map(({ text, href }) => (
              <li>
                <Link
                  variant="ghost"
                  className="p-0 h-auto"
                  target="_blank"
                  href={href}
                >
                  {text}
                </Link>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="space-y-4">
        <p class="font-bold text-lg">{t("footer.contact")}</p>
        <div>
          <p>
            Email: <Link
              variant="ghost"
              className="p-0 h-auto"
              href="mailto:admboldmedia@gmail.com">admboldmedia@gmail.com</Link
            >
          </p>
          <Link
            variant="ghost"
            className="p-0 h-auto whitespace-normal"
            href="https://maps.app.goo.gl/bsLhb5c62yw626Sp8"
          >
            Rua do Colégio Angolano de Talatona, Edificio Sanzel Talatona,
            Luanda, Angola
          </Link>
        </div>
      </div>
    </div>
    <div class="md:flex justify-between items-center">
      <p>
        © {year} BOLD MEDIA. {t("footer.copyright")}
      </p>
      <Link
        variant="ghost"
        className="p-0 h-auto text-center w-full md:w-auto text-xs"
        href="#">{t("footer.back-to-top")} <ArrowUp /></Link
      >
    </div>
  </div>
</footer>
