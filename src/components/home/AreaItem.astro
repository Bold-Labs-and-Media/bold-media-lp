---
import { addHexOpacity, getLangFromUrl, useTranslations } from "@/lib/utils";
import { Image } from "astro:assets";

type Props = {
  color: string;
  title: string;
  description: string;
  logo: string;
  link?: string;
};

const { color, description, title, logo, link } = Astro.props;
const cardBackgroundColor = addHexOpacity(color, 10);

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<li class="shadow-md rounded-md hover:scale-105 duration-300">
  <a
    href={link}
    target="_blank"
    class="flex flex-col md:flex-row bg-white h-full"
  >
    <div
      style={`background-color: ${cardBackgroundColor}`}
      class="flex justify-center py-6 md:py-0 md:px-20 items-center"
    >
      <Image src={logo} alt={title} width={200} height={200} />
    </div>
    <div class="p-6">
      <h3 style={`color: ${color}`} class="font-bold text-2xl mb-4">
        {title}
      </h3>
      <p class="text-grey-100 text-sm">
        {description}
      </p>
      <p class="md:hidden mt-2" style={`color: ${color}`}>
        {t("areas.see-more")}
      </p>
    </div>
  </a>
</li>
