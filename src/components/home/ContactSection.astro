---
import { getLangFromUrl, useTranslations } from "@/lib/utils";
import { Mail } from "lucide-react";
import SendMessageForm from "../interactive/send-message-form";
import { Link } from "../ui/link";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const whyUs = [
  {
    title: t("contact.why-us-point1"),
  },
  {
    title: t("contact.why-us-point2"),
  },
  {
    title: t("contact.why-us-point3"),
  },
];
---

<div id="contact" class="bg-grey-100/5 py-16">
  <section class="wrapper">
    <div class="space-y-14 text-grey-100 mb-16 md:mb-14">
      <h2 class="font-bold text-4xl md:text-[36px] text-center">
        <span class="border-b-4 border-primary">{t("contact.title1")}</span>
        {t("contact.title2")}
      </h2>
      <p class="text-center max-w-[768px] mx-auto">
        {t("contact.subtitle")}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <SendMessageForm lang={lang} client:load />
      <div class="bg-white rounded-md shadow-md p-8 space-y-6">
        <div class="flex items-center gap-4">
          <div class="rounded-full p-3 w-fit bg-primary/10">
            <Mail size={32} className="text-primary" />
          </div>
          <h3 class="text-grey-100 text-2xl font-bold">
            {t("contact.email-title")}
          </h3>
        </div>
        <p>
          {t("contact.email-subtitle")}
        </p>
        <div class="bg-grey-100/5 p-4 rounded-md text-sm">
          <p class="font-bold">Email</p>
          <Link
            variant="link"
            className="p-0 h-auto"
            href="mailto:admboldmedia@gmail.com">admboldmedia@gmail.com</Link
          >
        </div>
      </div>
      <div class="rounded-md why-us-bg text-white shadow-md p-8 space-y-4">
        <p class="font-bold text-2xl">{t("contact.why-us-title")}</p>
        <ul class="space-y-4 text-sm">
          {
            whyUs.map(({ title }) => (
              <li class="flex gap-3">
                <div class="size-5 bg-white/20 rounded-full flex justify-center items-center">
                  <div class="size-2 bg-white rounded-full" />
                </div>
                <p class="flex-1">{title}</p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>
</div>
